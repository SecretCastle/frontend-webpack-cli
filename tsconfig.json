{
    "compilerOptions": {
        "strictNullChecks": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "target": "es6",
        "lib": ["dom", "es2017"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "build"]
}
